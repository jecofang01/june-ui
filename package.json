  "scripts": {
    "bootstrap": "lerna bootstrap",
    "bootstrap:clean": "lerna clean",
    "build": "lerna exec --since --concurrency=1 --bail=false --stream babel -- src -d dist --copy-files --source-maps --ignore __snapshots__,*.spec.js,*.stories.js",
    "build:clean": "lerna exec --since --concurrency=1 --bail=false --stream rimraf -- dist",
    "flow:start": "flow start",
    "flow:stop": "flow stop",
    "flow:status": "flow status",
    "flow:coverage": "flow coverage",
    "flow:update": "flow-typed update",
    "lint": "npm-run-all lint:js lint:css",
    "lint:js": "cross-env NODE_ENV=production eslint --cache --cache-location=.cache/eslint --ext .js,.jsx,.json --fix .",
    "lint:css": "stylelint './packages/**/styles.js'",
    "storybook": "start-storybook -p 9001 -c config/storybook",
    "test": "lerna exec --since --concurrency=1 --bail=false --stream jest -- --verbose --coverage --config=.jestrc.json"
  },
  "license": "MIT",
