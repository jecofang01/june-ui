{
    "browser": true,
      "collectCoverage": true,
      "collectCoverageFrom": [
        "packages/**/*.{js,jsx}",
        "!packages/**/src/index.js",
        "!**/node_modules/**",
        "!**/dist/**",
        "!**/reports/**",
        "!**/storybook/**"
      ],
      "coverageDirectory": "reports/coverage",
      "coveragePathIgnorePatterns": ["/node_modules/"],
      "coverageThreshold": {
        "global": {
          "branches": 90,
          "functions": 90,
          "lines": 90,
          "statements": 90
        }
      },
      "globals": {
        "__DEV__": true
      },
      "testMatch": ["**/?(*.)+(spec|test).js?(x)"],
      "transform": {
        "^.+\\.jsx?$": "babel-jest"
      },
      "watchPathIgnorePatterns": [
        "/node_modules/",
        "/reports/",
        "/dist/",
        "<rootDir>/config",
        "<rootDir>/flow-typed"
      ],
      "setupFiles": ["<rootDir>/config/jest/setupTests.js"]
  }